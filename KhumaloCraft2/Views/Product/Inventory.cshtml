@model List<KhumaloCraft2.Models.Product>

@{
    ViewBag.Title = "Product Inventory";
}

<h3>Categories</h3>
<div class="row">
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Inventory" asp-route-category="Photos" class="nav-link">Photos</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Inventory" asp-route-category="Ceramics" class="nav-link">Ceramics</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Inventory" asp-route-category="Painting" class="nav-link">Paintings</a>
            </li>
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Inventory" asp-route-category="Sculpture" class="nav-link">Sculptures</a>
            </li>

        </ul>

    </div>
    <div class="col-md-10">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="/images/@item.ImageFileName" class="card-img-top" alt="Image of @item.ProdName">
                        <div class="card-body">
                            <h5 class="card-title">@item.ProdName</h5>
                            <h5 class="card-title">@item.Availability</h5>
                            <p class="card-text"><strong>Price:</strong> R @item.Price?.ToString("N2")</p>
                            <a href="@Url.Action("Details", "Product", new { id = item.id })" class="btn btn-primary">Details</a> @* Add slug *@
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


